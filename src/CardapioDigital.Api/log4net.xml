<log4net>

  <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Log\application.log"/>
    <param name="AppendToFile" value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="2"/>
    <maximumFileSize value="10MB"/>
    <staticLogFileName value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss} | %-5level | %logger | %message%newline"/>
    </layout>
  </appender>

  <appender name="NHibernateAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Log\NHibernate\nhibernate.log"/>
    <param name="AppendToFile" value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="2"/>
    <maximumFileSize value="10MB"/>
    <staticLogFileName value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss} | %-5level | %logger | %message%newline"/>
    </layout>
  </appender>

  <appender name="NHibernateSqlAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="Log\NHibernate\nhibernate.sql.log"/>
    <param name="AppendToFile" value="true"/>
    <rollingStyle value="Size"/>
    <maxSizeRollBackups value="2"/>
    <maximumFileSize value="10MB"/>
    <staticLogFileName value="true"/>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss} | %-5level | %logger | %message%newline"/>
    </layout>
  </appender>

  <root>
    <level value="Debug"/>
    <appender-ref ref="LogFileAppender"/>
  </root>

  <logger name="NHibernate">
    <level value="ERROR" />
    <appender-ref ref="NHibernateAppender"/>
  </logger>

  <logger name="NHibernate.Loader.Loader">
    <level value="INFO" />
    <appender-ref ref="NHibernateAppender"/>
  </logger>

  <logger name="NHibernate.SQL">
    <level value="DEBUG"/>
    <appender-ref ref="NHibernateSqlAppender"/>
  </logger>

</log4net>